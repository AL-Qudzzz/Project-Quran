<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">

        </shape>
    </item>

    <!-- Border Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:startColor="#77C4FF"
                android:endColor="#BAE5FC"
                android:type="linear" />
            <corners android:radius="25dp" /> <!-- Radius sudut -->
            <stroke android:width="3dp" android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>