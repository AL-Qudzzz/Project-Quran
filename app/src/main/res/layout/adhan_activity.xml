<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F9FA">

    <!-- Header -->
    <!-- CardView for last read section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/lastReadCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="#ffffff">

            <!-- Tombol Kembali -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <!-- Judul -->
            <TextView
                android:id="@+id/adhanschedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Adhan Schedule"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/pinlocation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Pilih lokasi"
                android:src="@drawable/location"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Date & Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D1E7FF"
        android:padding="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateHijri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Sya'ban 1446H"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dateGregorian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 February 2025"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#D1E7FF"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciputat, Tangerang Selatan - Indonesia"
            android:textSize="14sp"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adhanRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp" />


    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_menu"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>